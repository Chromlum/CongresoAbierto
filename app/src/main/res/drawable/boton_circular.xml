<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid
                android:color="@color/mainc"/>

            <stroke
                android:width="1px"
                android:color="#000000"/>

        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid
                android:color="@color/cya_dark"/>

            <stroke
                android:width="1px"
                android:color="#000000"/>

        </shape>
    </item>
    <item
        android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid
                android:color="@color/mainc"/>

            <stroke
                android:width="1px"
                android:color="#000000"/>

        </shape>
    </item>
    <item
        android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid
                android:color="@color/cya_dark"/>

            <stroke
                android:width="1px"
                android:color="#000000"/>

        </shape>
    </item>

</selector>